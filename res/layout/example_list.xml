<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:background="#F2F5FC"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/cases"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:text="Line1"
        android:textColor="#111A46"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:background="@drawable/death"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:text="Line2"
        app:layout_constraintHorizontal_weight="1"
        android:textColor="#111A46"
        android:textSize="19dp"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <TextView
        android:id="@+id/newconfirm"
        android:layout_width="0dp"
        android:layout_height="73dp"
        style="@style/TextAppearance.AppCompat.Body2"



        android:background="@drawable/newcases"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:text="newcon"
        android:textColor="#111A46"
        android:textSize="19dp"
        app:layout_constraintEnd_toStartOf="@+id/recovered"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/recovered"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:background="@drawable/recovered"
        style="@style/TextAppearance.AppCompat.Body2"

        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:text="recoverd"
        android:textColor="#111A46"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/newconfirm"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/imageView"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="0dp"
        android:layout_height="81dp"
        android:gravity="center"
        android:shadowColor="#E8E8E8"

        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="AUSTRALIA"
        android:textColor="#111A46"
        android:textColorHighlight="#DFDFDF"
        android:textColorHint="#F4F4F4"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>